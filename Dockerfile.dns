# Build stage
FROM golang:1.21-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /dns-server ./cmd/dns

# Final stage
FROM alpine:latest
WORKDIR /
COPY --from=builder /dns-server /dns-server
EXPOSE 5353/udp
CMD ["/dns-server"]

