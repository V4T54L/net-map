# Server Configuration
API_PORT=8080
DNS_PORT=5353

# PostgreSQL Database
DB_URL=postgres://user:password@localhost:5432/dns_db?sslmode=disable

# Redis Cache & Bloom Filter
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET_KEY="a-very-secret-key-that-is-long-enough"

# API Rate Limiting
RATE_LIMITER_ENABLED=true
RATE_LIMITER_RPS=10      # Requests per second
RATE_LIMITER_BURST=20    # Max burst size
RATE_LIMITER_TTL="1m"    # Time to live for visitor entry in memory

# Bloom Filter Configuration
BLOOM_FILTER_SIZE=100000 # Expected number of items
BLOOM_FILTER_HASHES=4    # Number of hash functions

